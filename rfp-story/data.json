  "preBidInsights": [
    {
      "category": "Audience",
      "insight": "Internal use only in Phase 1",
      "impact": "High",
      "surprise": false,
      "description": "Dashboard designed for Trust leadership and internal analytics teams, not public use."
    },
    {
      "category": "Data Strategy",
      "insight": "No ETL tool investment planned",
      "impact": "High",
      "surprise": true,
      "description": "Tata Trusts won't invest in ETL tools; agencies must include in proposal if needed."
    },
    {
      "category": "Technology Stack",
      "insight": "Open to alternatives beyond Power BI",
      "impact": "High",
      "surprise": true,
      "description": "Despite having Power BI licenses, Trusts welcome open-source and innovative solutions."
    },
    {
      "category": "Collaboration",
      "insight": "Daily stand-ups preferred",
      "impact": "Medium",
      "surprise": false,
      "description": "Close collaboration expected with daily or twice-weekly sync meetings via Teams."
    },
    {
      "category": "Data Quality",
      "insight": "Vendor responsible for quality checks",
      "impact": "High",
      "surprise": true,
      "description": "While data will be sanitized, vendors must implement validation and quality frameworks."
    },
    {
      "category": "Phase 2 Scope",
      "insight": "Dependent on Phase 1 performance",
      "impact": "High",
      "surprise": false,
      "description": "Future work based on successful delivery and evolving programmatic needs."
    },
    {
      "category": "Infrastructure",
      "insight": "Cloud hosting, vendor-managed",
      "impact": "High",
      "surprise": true,
      "description": "No on-prem data center; vendors must include cloud hosting costs in proposals."
    },
    {
      "category": "KPIs",
      "insight": "5-7 KPIs per theme, 70-80% quantitative",
      "impact": "Medium",
      "surprise": false,
      "description": "Each of multiple themes will have consolidated KPIs with mix of quantitative/qualitative."
    },
    {
      "category": "Real-time Definition",
      "insight": "Real-time means 'latest upload'",
      "impact": "Medium",
      "surprise": true,
      "description": "Not streaming data; monthly/fortnightly file uploads that reflect immediately in dashboard."
    },
    {
      "category": "AI Exploration",
      "insight": "No restrictions on AI in Phase 1",
      "impact": "Medium",
      "surprise": true,
      "description": "Phase 2 focus, but Phase 1 proof-of-concept welcome if value demonstrated."
    }
  ],
